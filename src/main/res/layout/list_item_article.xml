<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/article_image_item"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/article_image" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/material_left_right"
            android:paddingTop="@dimen/material_top_bottom"
            android:paddingRight="@dimen/material_left_right"
            android:textColor="@color/textDarkPrimary"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/material_left_right"
            android:paddingRight="@dimen/material_left_right"
            android:paddingTop="@dimen/material_top_bottom"
            android:textColor="@color/textDarkSecondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/article_author"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/material_left_right"
            android:paddingRight="@dimen/material_left_right"
            android:paddingBottom="@dimen/material_top_bottom"
            android:textColor="@color/textDarkSecondary"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
